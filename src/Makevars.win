PKG_CPPFLAGS=-I../windows/libxml2-2.9.4/include/libxml2 \
	-I../windows/libxml2-2.9.4/include \
	-DLIBXML_STATIC

PKG_LIBS=-L../windows/libxml2-2.9.4/lib${R_ARCH} \
	-lxslt -lxml2 -llzma -liconv -lz -lws2_32

all: clean winlibs

clean:
	rm -f $(OBJECTS) xml2.dll

winlibs:
	"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" "../tools/winlibs.R"

.PHONY: all winlibs clean
